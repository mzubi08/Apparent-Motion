 
    buttonSquare.on('pointerover', function () {this.setTint(onColor);});
    buttonSquare.on('pointerdown', function (pointer) {
    	this.setTint(clickColor);
    	message.setText("Click in the desired frame to add the Square");
    	var count = 0
    	
		back.on('pointerdown', function (pointer) {
		
		if (pointer.x <= 300){
			if (count == 0) {
				tempShape = gameSpace.add.rectangle(pointer.x, pointer.y,shapeSize*30,shapeSize*30,currentColor).setInteractive();
				gameSpace.input.setDraggable(tempShape);
				container1.add(tempShape);
				count += 1;
				message.setText(defaultMessage)
				}
			} else if (pointer.x >= 300 && pointer.x <= 597){
			if (count == 0) {
				tempShape = gameSpace.add.rectangle(pointer.x-300, pointer.y,shapeSize*30,shapeSize*30,currentColor).setInteractive();
				gameSpace.input.setDraggable(tempShape);
				container2.add(tempShape);
				count += 1;
				message.setText(defaultMessage)
				}
			} else if (pointer.x >= 597 && pointer.x <= 896){
			if (count == 0) {
				tempShape = gameSpace.add.rectangle(pointer.x-597, pointer.y,shapeSize*30,shapeSize*30,currentColor).setInteractive();
				gameSpace.input.setDraggable(tempShape);
				container3.add(tempShape);
				count += 1;
				message.setText(defaultMessage)
				}
			}
			});
		
			
		
    	}); 	
    buttonSquare.on('pointerout', function () {this.clearTint();});
    buttonSquare.on('pointerup', function () {this.clearTint();});
    
    buttonTriangle.on('pointerover', function () {this.setTint(onColor);});
    buttonTriangle.on('pointerdown', function (pointer) {
    	this.setTint(clickColor);
    	message.setText("Click in the desired frame to add the Square");
    	var count = 0
    	
		back.on('pointerdown', function (pointer) {
		
		if (pointer.x <= 300){
			if (count == 0) {
				tempShape = gameSpace.add.triangle(pointer.x, pointer.y,0,shapeSize*30,shapeSize*30,shapeSize*30,0,0,currentColor).setInteractive();
				gameSpace.input.setDraggable(tempShape);
				container1.add(tempShape);
				count += 1;
				message.setText(defaultMessage)
				}
			} else if (pointer.x >= 300 && pointer.x <= 597){
			if (count == 0) {
				tempShape = gameSpace.add.triangle(pointer.x-300, pointer.y,shapeSize*30,shapeSize*30,shapeSize*30,0,0,currentColor).setInteractive();
				gameSpace.input.setDraggable(tempShape);
				container2.add(tempShape);
				count += 1;
				message.setText(defaultMessage)
				}
			} else if (pointer.x >= 597 && pointer.x <= 896){
			if (count == 0) {
				tempShape = gameSpace.add.triangle(pointer.x-597, pointer.y,shapeSize*30,shapeSize*30,shapeSize*30,0,0,currentColor).setInteractive();
				gameSpace.input.setDraggable(tempShape);
				container3.add(tempShape);
				count += 1;
				message.setText(defaultMessage)
				}
			}
			});
		
			
		
    	});
    buttonTriangle.on('pointerout', function () {this.clearTint();});
